@model IEnumerable<AgendaMedicas.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}

<div class="container text-dark mt-5">
	<h1 class="text-center display-5 ">Cadastro de <span class="fw-bold">Pacientes</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-dark btn-lg w-25"> <i class="bi bi-plus-circle"></i> Adicionar</a>
	</p>

	<table class="table table-light table-striped table-borderless">
		<thead>
			<tr>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.Prontuario)
				</th>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.CPF)
				</th>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.DataNascimento)
				</th>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th class="bg-white">
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th class="bg-white"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a class="btn btn-outline-dark btn-sm me-3" asp-action="Edit" asp-route-id="@item.PacienteId"><i class="bi bi-pencil-square"></i> Editar</a>
						<a class="btn btn-outline-dark btn-sm" asp-action="Delete" asp-route-id="@item.PacienteId"><i class="bi bi-x-square"></i> Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>